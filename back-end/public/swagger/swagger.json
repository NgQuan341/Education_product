{
    "swagger": "2.0",
    "info": {
        "title": "Laravel and Swagger",
        "description": "Getting started with Laravel and Swagger",
        "termsOfService": "",
        "contact": {
            "email": "name@example.com"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "paths": {
        "api/user/login/": {
            "post": {
                "description": "Return a user's information",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Your email",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Your password",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully",
                        "schema": {
                            "properties": {
                                "id": {
                                    "description": "UUID",
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                },
                                "email_verified_at": {
                                    "type": "string"
                                },
                                "created_at": {
                                    "type": "timestamp"
                                },
                                "updated_at": {
                                    "type": "timestamp"
                                },
                                "avatar": {
                                    "type": "timestamp"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Login kh\u00f4ng th\u00e0nh c\u00f4ng!"
                    }
                }
            }
        },
        "api/user/register/": {
            "post": {
                "description": "Return a user's information",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Your email",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Your name",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Your password",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "confirm_password",
                        "in": "query",
                        "description": "Your confirm_password",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully",
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "remember_token": {
                                    "type": "string"
                                },
                                "created_at": {
                                    "type": "timestamp"
                                },
                                "updated_at": {
                                    "type": "timestamp"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        },
        "api/inbox/": {
            "post": {
                "description": "Trả về tin nhắn của account đang đăng nhập, user đăng nhập thì trả toàn bộ messages của acc đó, nêu là admin thì trả về id user",
                "parameters": [
                ],
                "responses": {
                    "200": {
                        "description": "Successfully",
                        "schema": {
                            "properties": {
                                "success":{
                                    "type":"integer"
                                },
                                "messages":{
                                    "type":"object"
                                },
                                "users":{
                                    "type":"object"
                                }

                            }
                        }
                    }                   
                }
            }
        },
        "api/inbox_admin/": {
            "post": {
                "description": "API hoạt động khi account đăng nhập là admin, Trả về toàn bộ messages của user bất kì được chọn bởi admin",
                "parameters": [
                    {
                        "name": "sender_id",
                        "in": "query",
                        "description": "ID account admin muốn xem message",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully",
                        "schema": {
                            "properties": {
                                "messages": {
                                    "type": "object"
                                },
                                "sender_id": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Lỗi khi truyền thiếu sender_id",
                        "schema": {
                            "properties": {
                                "error": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Lỗi khi không phải account admin nhưng gọi API này",
                        "schema": {
                            "properties": {
                                "error": {
                                    "type": "string"
                                }
                            }
                        }
                       
                    }
                   
                }
            }
        },
        "api/sendmess/": {
            "post": {
                "description": "Gửi message, nếu chưa đăng nhập thì tạo account và đăng nhập account đó, trả về tin nhắn vừa gửi",
                "parameters": [
                    {
                        "name": "sender_id",
                        "in": "query",
                        "description": "ID account nhận messages",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "message",
                        "in": "query",
                        "description": "Nội dung của message",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully",
                        "schema": {
                            "properties": {
                                "success":{
                                    "type":"integer"
                                },
                                "new_message": {
                                    "type": "object"
                                }
                            }
                        }
                    }                   
                }
            }
        }
    },
    "definitions": {}
}